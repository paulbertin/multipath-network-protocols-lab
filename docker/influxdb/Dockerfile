FROM influxdb:2.6.1

# Initialize influxdb at startup
ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=admin
ENV DOCKER_INFLUXDB_INIT_PASSWORD=influxdb
ENV DOCKER_INFLUXDB_INIT_ORG=org
ENV DOCKER_INFLUXDB_INIT_BUCKET=telegraf
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=secret-token

# Set timezone
ENV TZ=CET-1
